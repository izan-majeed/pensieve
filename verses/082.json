[
  {
    "verse_id": 1,
    "verse_content": " إِذَا ٱلسَّمَآءُ ٱنفَطَرَتْ",
    "verse_key": "82:1"
  },
  {
    "verse_id": 2,
    "verse_content": "وَإِذَا ٱلْكَوَاكِبُ ٱنتَثَرَتْ",
    "verse_key": "82:2"
  },
  {
    "verse_id": 3,
    "verse_content": "وَإِذَا ٱلْبِحَارُ فُجِّرَتْ",
    "verse_key": "82:3"
  },
  {
    "verse_id": 4,
    "verse_content": "وَإِذَا ٱلْقُبُورُ بُعْثِرَتْ",
    "verse_key": "82:4"
  },
  {
    "verse_id": 5,
    "verse_content": "عَلِمَتْ نَفْسٌ مَّا قَدَّمَتْ وَأَخَّرَتْ",
    "verse_key": "82:5"
  },
  {
    "verse_id": 6,
    "verse_content": "يَـٰٓأَيُّهَا ٱلْإِنسَـٰنُ مَا غَرَّكَ بِرَبِّكَ ٱلْكَرِيمِ",
    "verse_key": "82:6"
  },
  {
    "verse_id": 7,
    "verse_content": "ٱلَّذِى خَلَقَكَ فَسَوَّىٰكَ فَعَدَلَكَ",
    "verse_key": "82:7"
  },
  {
    "verse_id": 8,
    "verse_content": "فِىٓ أَىِّ صُورَةٍ مَّا شَآءَ رَكَّبَكَ",
    "verse_key": "82:8"
  },
  {
    "verse_id": 9,
    "verse_content": "كَلَّا بَلْ تُكَذِّبُونَ بِٱلدِّينِ",
    "verse_key": "82:9"
  },
  {
    "verse_id": 10,
    "verse_content": "وَإِنَّ عَلَيْكُمْ لَحَـٰفِظِينَ",
    "verse_key": "82:10"
  },
  {
    "verse_id": 11,
    "verse_content": "كِرَامًا كَـٰتِبِينَ",
    "verse_key": "82:11"
  },
  {
    "verse_id": 12,
    "verse_content": "يَعْلَمُونَ مَا تَفْعَلُونَ",
    "verse_key": "82:12"
  },
  {
    "verse_id": 13,
    "verse_content": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ",
    "verse_key": "82:13"
  },
  {
    "verse_id": 14,
    "verse_content": "وَإِنَّ ٱلْفُجَّارَ لَفِى جَحِيمٍ",
    "verse_key": "82:14"
  },
  {
    "verse_id": 15,
    "verse_content": "يَصْلَوْنَهَا يَوْمَ ٱلدِّينِ",
    "verse_key": "82:15"
  },
  {
    "verse_id": 16,
    "verse_content": "وَمَا هُمْ عَنْهَا بِغَآئِبِينَ",
    "verse_key": "82:16"
  },
  {
    "verse_id": 17,
    "verse_content": "وَمَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
    "verse_key": "82:17"
  },
  {
    "verse_id": 18,
    "verse_content": "ثُمَّ مَآ أَدْرَىٰكَ مَا يَوْمُ ٱلدِّينِ",
    "verse_key": "82:18"
  },
  {
    "verse_id": 19,
    "verse_content": "يَوْمَ لَا تَمْلِكُ نَفْسٌ لِّنَفْسٍ شَيْـًٔا ۖ وَٱلْأَمْرُ يَوْمَئِذٍ لِّلَّهِ",
    "verse_key": "82:19"
  }
]