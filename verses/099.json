[
  {
    "verse_id": 1,
    "verse_content": " إِذَا زُلْزِلَتِ ٱلْأَرْضُ زِلْزَالَهَا",
    "verse_key": "99:1"
  },
  {
    "verse_id": 2,
    "verse_content": "وَأَخْرَجَتِ ٱلْأَرْضُ أَثْقَالَهَا",
    "verse_key": "99:2"
  },
  {
    "verse_id": 3,
    "verse_content": "وَقَالَ ٱلْإِنسَـٰنُ مَا لَهَا",
    "verse_key": "99:3"
  },
  {
    "verse_id": 4,
    "verse_content": "يَوْمَئِذٍ تُحَدِّثُ أَخْبَارَهَا",
    "verse_key": "99:4"
  },
  {
    "verse_id": 5,
    "verse_content": "بِأَنَّ رَبَّكَ أَوْحَىٰ لَهَا",
    "verse_key": "99:5"
  },
  {
    "verse_id": 6,
    "verse_content": "يَوْمَئِذٍ يَصْدُرُ ٱلنَّاسُ أَشْتَاتًا لِّيُرَوْا۟ أَعْمَـٰلَهُمْ",
    "verse_key": "99:6"
  },
  {
    "verse_id": 7,
    "verse_content": "فَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ خَيْرًا يَرَهُۥ",
    "verse_key": "99:7"
  },
  {
    "verse_id": 8,
    "verse_content": "وَمَن يَعْمَلْ مِثْقَالَ ذَرَّةٍ شَرًّا يَرَهُۥ",
    "verse_key": "99:8"
  }
]