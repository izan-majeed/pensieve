[
  {
    "verse_id": 1,
    "verse_content": " إِذَا ٱلسَّمَآءُ ٱنشَقَّتْ",
    "verse_key": "84:1"
  },
  {
    "verse_id": 2,
    "verse_content": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ",
    "verse_key": "84:2"
  },
  {
    "verse_id": 3,
    "verse_content": "وَإِذَا ٱلْأَرْضُ مُدَّتْ",
    "verse_key": "84:3"
  },
  {
    "verse_id": 4,
    "verse_content": "وَأَلْقَتْ مَا فِيهَا وَتَخَلَّتْ",
    "verse_key": "84:4"
  },
  {
    "verse_id": 5,
    "verse_content": "وَأَذِنَتْ لِرَبِّهَا وَحُقَّتْ",
    "verse_key": "84:5"
  },
  {
    "verse_id": 6,
    "verse_content": "يَـٰٓأَيُّهَا ٱلْإِنسَـٰنُ إِنَّكَ كَادِحٌ إِلَىٰ رَبِّكَ كَدْحًا فَمُلَـٰقِيهِ",
    "verse_key": "84:6"
  },
  {
    "verse_id": 7,
    "verse_content": "فَأَمَّا مَنْ أُوتِىَ كِتَـٰبَهُۥ بِيَمِينِهِۦ",
    "verse_key": "84:7"
  },
  {
    "verse_id": 8,
    "verse_content": "فَسَوْفَ يُحَاسَبُ حِسَابًا يَسِيرًا",
    "verse_key": "84:8"
  },
  {
    "verse_id": 9,
    "verse_content": "وَيَنقَلِبُ إِلَىٰٓ أَهْلِهِۦ مَسْرُورًا",
    "verse_key": "84:9"
  },
  {
    "verse_id": 10,
    "verse_content": "وَأَمَّا مَنْ أُوتِىَ كِتَـٰبَهُۥ وَرَآءَ ظَهْرِهِۦ",
    "verse_key": "84:10"
  },
  {
    "verse_id": 11,
    "verse_content": "فَسَوْفَ يَدْعُوا۟ ثُبُورًا",
    "verse_key": "84:11"
  },
  {
    "verse_id": 12,
    "verse_content": "وَيَصْلَىٰ سَعِيرًا",
    "verse_key": "84:12"
  },
  {
    "verse_id": 13,
    "verse_content": "إِنَّهُۥ كَانَ فِىٓ أَهْلِهِۦ مَسْرُورًا",
    "verse_key": "84:13"
  },
  {
    "verse_id": 14,
    "verse_content": "إِنَّهُۥ ظَنَّ أَن لَّن يَحُورَ",
    "verse_key": "84:14"
  },
  {
    "verse_id": 15,
    "verse_content": "بَلَىٰٓ إِنَّ رَبَّهُۥ كَانَ بِهِۦ بَصِيرًا",
    "verse_key": "84:15"
  },
  {
    "verse_id": 16,
    "verse_content": "فَلَآ أُقْسِمُ بِٱلشَّفَقِ",
    "verse_key": "84:16"
  },
  {
    "verse_id": 17,
    "verse_content": "وَٱلَّيْلِ وَمَا وَسَقَ",
    "verse_key": "84:17"
  },
  {
    "verse_id": 18,
    "verse_content": "وَٱلْقَمَرِ إِذَا ٱتَّسَقَ",
    "verse_key": "84:18"
  },
  {
    "verse_id": 19,
    "verse_content": "لَتَرْكَبُنَّ طَبَقًا عَن طَبَقٍ",
    "verse_key": "84:19"
  },
  {
    "verse_id": 20,
    "verse_content": "فَمَا لَهُمْ لَا يُؤْمِنُونَ",
    "verse_key": "84:20"
  },
  {
    "verse_id": 21,
    "verse_content": "وَإِذَا قُرِئَ عَلَيْهِمُ ٱلْقُرْءَانُ لَا يَسْجُدُونَ ۩",
    "verse_key": "84:21"
  },
  {
    "verse_id": 22,
    "verse_content": "بَلِ ٱلَّذِينَ كَفَرُوا۟ يُكَذِّبُونَ",
    "verse_key": "84:22"
  },
  {
    "verse_id": 23,
    "verse_content": "وَٱللَّهُ أَعْلَمُ بِمَا يُوعُونَ",
    "verse_key": "84:23"
  },
  {
    "verse_id": 24,
    "verse_content": "فَبَشِّرْهُم بِعَذَابٍ أَلِيمٍ",
    "verse_key": "84:24"
  },
  {
    "verse_id": 25,
    "verse_content": "إِلَّا ٱلَّذِينَ ءَامَنُوا۟ وَعَمِلُوا۟ ٱلصَّـٰلِحَـٰتِ لَهُمْ أَجْرٌ غَيْرُ مَمْنُونٍۭ",
    "verse_key": "84:25"
  }
]