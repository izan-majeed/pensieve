[
  {
    "verse_id": 1,
    "verse_content": " سَأَلَ سَآئِلٌۢ بِعَذَابٍ وَاقِعٍ",
    "verse_key": "70:1"
  },
  {
    "verse_id": 2,
    "verse_content": "لِّلْكَـٰفِرِينَ لَيْسَ لَهُۥ دَافِعٌ",
    "verse_key": "70:2"
  },
  {
    "verse_id": 3,
    "verse_content": "مِّنَ ٱللَّهِ ذِى ٱلْمَعَارِجِ",
    "verse_key": "70:3"
  },
  {
    "verse_id": 4,
    "verse_content": "تَعْرُجُ ٱلْمَلَـٰٓئِكَةُ وَٱلرُّوحُ إِلَيْهِ فِى يَوْمٍ كَانَ مِقْدَارُهُۥ خَمْسِينَ أَلْفَ سَنَةٍ",
    "verse_key": "70:4"
  },
  {
    "verse_id": 5,
    "verse_content": "فَٱصْبِرْ صَبْرًا جَمِيلًا",
    "verse_key": "70:5"
  },
  {
    "verse_id": 6,
    "verse_content": "إِنَّهُمْ يَرَوْنَهُۥ بَعِيدًا",
    "verse_key": "70:6"
  },
  {
    "verse_id": 7,
    "verse_content": "وَنَرَىٰهُ قَرِيبًا",
    "verse_key": "70:7"
  },
  {
    "verse_id": 8,
    "verse_content": "يَوْمَ تَكُونُ ٱلسَّمَآءُ كَٱلْمُهْلِ",
    "verse_key": "70:8"
  },
  {
    "verse_id": 9,
    "verse_content": "وَتَكُونُ ٱلْجِبَالُ كَٱلْعِهْنِ",
    "verse_key": "70:9"
  },
  {
    "verse_id": 10,
    "verse_content": "وَلَا يَسْـَٔلُ حَمِيمٌ حَمِيمًا",
    "verse_key": "70:10"
  },
  {
    "verse_id": 11,
    "verse_content": "يُبَصَّرُونَهُمْ ۚ يَوَدُّ ٱلْمُجْرِمُ لَوْ يَفْتَدِى مِنْ عَذَابِ يَوْمِئِذٍۭ بِبَنِيهِ",
    "verse_key": "70:11"
  },
  {
    "verse_id": 12,
    "verse_content": "وَصَـٰحِبَتِهِۦ وَأَخِيهِ",
    "verse_key": "70:12"
  },
  {
    "verse_id": 13,
    "verse_content": "وَفَصِيلَتِهِ ٱلَّتِى تُـْٔوِيهِ",
    "verse_key": "70:13"
  },
  {
    "verse_id": 14,
    "verse_content": "وَمَن فِى ٱلْأَرْضِ جَمِيعًا ثُمَّ يُنجِيهِ",
    "verse_key": "70:14"
  },
  {
    "verse_id": 15,
    "verse_content": "كَلَّآ ۖ إِنَّهَا لَظَىٰ",
    "verse_key": "70:15"
  },
  {
    "verse_id": 16,
    "verse_content": "نَزَّاعَةً لِّلشَّوَىٰ",
    "verse_key": "70:16"
  },
  {
    "verse_id": 17,
    "verse_content": "تَدْعُوا۟ مَنْ أَدْبَرَ وَتَوَلَّىٰ",
    "verse_key": "70:17"
  },
  {
    "verse_id": 18,
    "verse_content": "وَجَمَعَ فَأَوْعَىٰٓ",
    "verse_key": "70:18"
  },
  {
    "verse_id": 19,
    "verse_content": "۞ إِنَّ ٱلْإِنسَـٰنَ خُلِقَ هَلُوعًا",
    "verse_key": "70:19"
  },
  {
    "verse_id": 20,
    "verse_content": "إِذَا مَسَّهُ ٱلشَّرُّ جَزُوعًا",
    "verse_key": "70:20"
  },
  {
    "verse_id": 21,
    "verse_content": "وَإِذَا مَسَّهُ ٱلْخَيْرُ مَنُوعًا",
    "verse_key": "70:21"
  },
  {
    "verse_id": 22,
    "verse_content": "إِلَّا ٱلْمُصَلِّينَ",
    "verse_key": "70:22"
  },
  {
    "verse_id": 23,
    "verse_content": "ٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ دَآئِمُونَ",
    "verse_key": "70:23"
  },
  {
    "verse_id": 24,
    "verse_content": "وَٱلَّذِينَ فِىٓ أَمْوَٰلِهِمْ حَقٌّ مَّعْلُومٌ",
    "verse_key": "70:24"
  },
  {
    "verse_id": 25,
    "verse_content": "لِّلسَّآئِلِ وَٱلْمَحْرُومِ",
    "verse_key": "70:25"
  },
  {
    "verse_id": 26,
    "verse_content": "وَٱلَّذِينَ يُصَدِّقُونَ بِيَوْمِ ٱلدِّينِ",
    "verse_key": "70:26"
  },
  {
    "verse_id": 27,
    "verse_content": "وَٱلَّذِينَ هُم مِّنْ عَذَابِ رَبِّهِم مُّشْفِقُونَ",
    "verse_key": "70:27"
  },
  {
    "verse_id": 28,
    "verse_content": "إِنَّ عَذَابَ رَبِّهِمْ غَيْرُ مَأْمُونٍ",
    "verse_key": "70:28"
  },
  {
    "verse_id": 29,
    "verse_content": "وَٱلَّذِينَ هُمْ لِفُرُوجِهِمْ حَـٰفِظُونَ",
    "verse_key": "70:29"
  },
  {
    "verse_id": 30,
    "verse_content": "إِلَّا عَلَىٰٓ أَزْوَٰجِهِمْ أَوْ مَا مَلَكَتْ أَيْمَـٰنُهُمْ فَإِنَّهُمْ غَيْرُ مَلُومِينَ",
    "verse_key": "70:30"
  },
  {
    "verse_id": 31,
    "verse_content": "فَمَنِ ٱبْتَغَىٰ وَرَآءَ ذَٰلِكَ فَأُو۟لَـٰٓئِكَ هُمُ ٱلْعَادُونَ",
    "verse_key": "70:31"
  },
  {
    "verse_id": 32,
    "verse_content": "وَٱلَّذِينَ هُمْ لِأَمَـٰنَـٰتِهِمْ وَعَهْدِهِمْ رَٰعُونَ",
    "verse_key": "70:32"
  },
  {
    "verse_id": 33,
    "verse_content": "وَٱلَّذِينَ هُم بِشَهَـٰدَٰتِهِمْ قَآئِمُونَ",
    "verse_key": "70:33"
  },
  {
    "verse_id": 34,
    "verse_content": "وَٱلَّذِينَ هُمْ عَلَىٰ صَلَاتِهِمْ يُحَافِظُونَ",
    "verse_key": "70:34"
  },
  {
    "verse_id": 35,
    "verse_content": "أُو۟لَـٰٓئِكَ فِى جَنَّـٰتٍ مُّكْرَمُونَ",
    "verse_key": "70:35"
  },
  {
    "verse_id": 36,
    "verse_content": "فَمَالِ ٱلَّذِينَ كَفَرُوا۟ قِبَلَكَ مُهْطِعِينَ",
    "verse_key": "70:36"
  },
  {
    "verse_id": 37,
    "verse_content": "عَنِ ٱلْيَمِينِ وَعَنِ ٱلشِّمَالِ عِزِينَ",
    "verse_key": "70:37"
  },
  {
    "verse_id": 38,
    "verse_content": "أَيَطْمَعُ كُلُّ ٱمْرِئٍ مِّنْهُمْ أَن يُدْخَلَ جَنَّةَ نَعِيمٍ",
    "verse_key": "70:38"
  },
  {
    "verse_id": 39,
    "verse_content": "كَلَّآ ۖ إِنَّا خَلَقْنَـٰهُم مِّمَّا يَعْلَمُونَ",
    "verse_key": "70:39"
  },
  {
    "verse_id": 40,
    "verse_content": "فَلَآ أُقْسِمُ بِرَبِّ ٱلْمَشَـٰرِقِ وَٱلْمَغَـٰرِبِ إِنَّا لَقَـٰدِرُونَ",
    "verse_key": "70:40"
  },
  {
    "verse_id": 41,
    "verse_content": "عَلَىٰٓ أَن نُّبَدِّلَ خَيْرًا مِّنْهُمْ وَمَا نَحْنُ بِمَسْبُوقِينَ",
    "verse_key": "70:41"
  },
  {
    "verse_id": 42,
    "verse_content": "فَذَرْهُمْ يَخُوضُوا۟ وَيَلْعَبُوا۟ حَتَّىٰ يُلَـٰقُوا۟ يَوْمَهُمُ ٱلَّذِى يُوعَدُونَ",
    "verse_key": "70:42"
  },
  {
    "verse_id": 43,
    "verse_content": "يَوْمَ يَخْرُجُونَ مِنَ ٱلْأَجْدَاثِ سِرَاعًا كَأَنَّهُمْ إِلَىٰ نُصُبٍ يُوفِضُونَ",
    "verse_key": "70:43"
  },
  {
    "verse_id": 44,
    "verse_content": "خَـٰشِعَةً أَبْصَـٰرُهُمْ تَرْهَقُهُمْ ذِلَّةٌ ۚ ذَٰلِكَ ٱلْيَوْمُ ٱلَّذِى كَانُوا۟ يُوعَدُونَ",
    "verse_key": "70:44"
  }
]