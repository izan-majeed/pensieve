[
  {
    "verse_id": 1,
    "verse_content": " وَيْلٌ لِّلْمُطَفِّفِينَ",
    "verse_key": "83:1"
  },
  {
    "verse_id": 2,
    "verse_content": "ٱلَّذِينَ إِذَا ٱكْتَالُوا۟ عَلَى ٱلنَّاسِ يَسْتَوْفُونَ",
    "verse_key": "83:2"
  },
  {
    "verse_id": 3,
    "verse_content": "وَإِذَا كَالُوهُمْ أَو وَّزَنُوهُمْ يُخْسِرُونَ",
    "verse_key": "83:3"
  },
  {
    "verse_id": 4,
    "verse_content": "أَلَا يَظُنُّ أُو۟لَـٰٓئِكَ أَنَّهُم مَّبْعُوثُونَ",
    "verse_key": "83:4"
  },
  {
    "verse_id": 5,
    "verse_content": "لِيَوْمٍ عَظِيمٍ",
    "verse_key": "83:5"
  },
  {
    "verse_id": 6,
    "verse_content": "يَوْمَ يَقُومُ ٱلنَّاسُ لِرَبِّ ٱلْعَـٰلَمِينَ",
    "verse_key": "83:6"
  },
  {
    "verse_id": 7,
    "verse_content": "كَلَّآ إِنَّ كِتَـٰبَ ٱلْفُجَّارِ لَفِى سِجِّينٍ",
    "verse_key": "83:7"
  },
  {
    "verse_id": 8,
    "verse_content": "وَمَآ أَدْرَىٰكَ مَا سِجِّينٌ",
    "verse_key": "83:8"
  },
  {
    "verse_id": 9,
    "verse_content": "كِتَـٰبٌ مَّرْقُومٌ",
    "verse_key": "83:9"
  },
  {
    "verse_id": 10,
    "verse_content": "وَيْلٌ يَوْمَئِذٍ لِّلْمُكَذِّبِينَ",
    "verse_key": "83:10"
  },
  {
    "verse_id": 11,
    "verse_content": "ٱلَّذِينَ يُكَذِّبُونَ بِيَوْمِ ٱلدِّينِ",
    "verse_key": "83:11"
  },
  {
    "verse_id": 12,
    "verse_content": "وَمَا يُكَذِّبُ بِهِۦٓ إِلَّا كُلُّ مُعْتَدٍ أَثِيمٍ",
    "verse_key": "83:12"
  },
  {
    "verse_id": 13,
    "verse_content": "إِذَا تُتْلَىٰ عَلَيْهِ ءَايَـٰتُنَا قَالَ أَسَـٰطِيرُ ٱلْأَوَّلِينَ",
    "verse_key": "83:13"
  },
  {
    "verse_id": 14,
    "verse_content": "كَلَّا ۖ بَلْ ۜ رَانَ عَلَىٰ قُلُوبِهِم مَّا كَانُوا۟ يَكْسِبُونَ",
    "verse_key": "83:14"
  },
  {
    "verse_id": 15,
    "verse_content": "كَلَّآ إِنَّهُمْ عَن رَّبِّهِمْ يَوْمَئِذٍ لَّمَحْجُوبُونَ",
    "verse_key": "83:15"
  },
  {
    "verse_id": 16,
    "verse_content": "ثُمَّ إِنَّهُمْ لَصَالُوا۟ ٱلْجَحِيمِ",
    "verse_key": "83:16"
  },
  {
    "verse_id": 17,
    "verse_content": "ثُمَّ يُقَالُ هَـٰذَا ٱلَّذِى كُنتُم بِهِۦ تُكَذِّبُونَ",
    "verse_key": "83:17"
  },
  {
    "verse_id": 18,
    "verse_content": "كَلَّآ إِنَّ كِتَـٰبَ ٱلْأَبْرَارِ لَفِى عِلِّيِّينَ",
    "verse_key": "83:18"
  },
  {
    "verse_id": 19,
    "verse_content": "وَمَآ أَدْرَىٰكَ مَا عِلِّيُّونَ",
    "verse_key": "83:19"
  },
  {
    "verse_id": 20,
    "verse_content": "كِتَـٰبٌ مَّرْقُومٌ",
    "verse_key": "83:20"
  },
  {
    "verse_id": 21,
    "verse_content": "يَشْهَدُهُ ٱلْمُقَرَّبُونَ",
    "verse_key": "83:21"
  },
  {
    "verse_id": 22,
    "verse_content": "إِنَّ ٱلْأَبْرَارَ لَفِى نَعِيمٍ",
    "verse_key": "83:22"
  },
  {
    "verse_id": 23,
    "verse_content": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ",
    "verse_key": "83:23"
  },
  {
    "verse_id": 24,
    "verse_content": "تَعْرِفُ فِى وُجُوهِهِمْ نَضْرَةَ ٱلنَّعِيمِ",
    "verse_key": "83:24"
  },
  {
    "verse_id": 25,
    "verse_content": "يُسْقَوْنَ مِن رَّحِيقٍ مَّخْتُومٍ",
    "verse_key": "83:25"
  },
  {
    "verse_id": 26,
    "verse_content": "خِتَـٰمُهُۥ مِسْكٌ ۚ وَفِى ذَٰلِكَ فَلْيَتَنَافَسِ ٱلْمُتَنَـٰفِسُونَ",
    "verse_key": "83:26"
  },
  {
    "verse_id": 27,
    "verse_content": "وَمِزَاجُهُۥ مِن تَسْنِيمٍ",
    "verse_key": "83:27"
  },
  {
    "verse_id": 28,
    "verse_content": "عَيْنًا يَشْرَبُ بِهَا ٱلْمُقَرَّبُونَ",
    "verse_key": "83:28"
  },
  {
    "verse_id": 29,
    "verse_content": "إِنَّ ٱلَّذِينَ أَجْرَمُوا۟ كَانُوا۟ مِنَ ٱلَّذِينَ ءَامَنُوا۟ يَضْحَكُونَ",
    "verse_key": "83:29"
  },
  {
    "verse_id": 30,
    "verse_content": "وَإِذَا مَرُّوا۟ بِهِمْ يَتَغَامَزُونَ",
    "verse_key": "83:30"
  },
  {
    "verse_id": 31,
    "verse_content": "وَإِذَا ٱنقَلَبُوٓا۟ إِلَىٰٓ أَهْلِهِمُ ٱنقَلَبُوا۟ فَكِهِينَ",
    "verse_key": "83:31"
  },
  {
    "verse_id": 32,
    "verse_content": "وَإِذَا رَأَوْهُمْ قَالُوٓا۟ إِنَّ هَـٰٓؤُلَآءِ لَضَآلُّونَ",
    "verse_key": "83:32"
  },
  {
    "verse_id": 33,
    "verse_content": "وَمَآ أُرْسِلُوا۟ عَلَيْهِمْ حَـٰفِظِينَ",
    "verse_key": "83:33"
  },
  {
    "verse_id": 34,
    "verse_content": "فَٱلْيَوْمَ ٱلَّذِينَ ءَامَنُوا۟ مِنَ ٱلْكُفَّارِ يَضْحَكُونَ",
    "verse_key": "83:34"
  },
  {
    "verse_id": 35,
    "verse_content": "عَلَى ٱلْأَرَآئِكِ يَنظُرُونَ",
    "verse_key": "83:35"
  },
  {
    "verse_id": 36,
    "verse_content": "هَلْ ثُوِّبَ ٱلْكُفَّارُ مَا كَانُوا۟ يَفْعَلُونَ",
    "verse_key": "83:36"
  }
]